{
    "version": "1.0.0",
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": false,
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.spec.ts"
    ]
}